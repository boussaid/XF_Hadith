    <template title="hadith" version_id="2" version_string="1.1"><![CDATA[<xen:require css="hadith.css" />

<script type="text/javascript">

function check_hadith(){

	$.getJSON("http://dorar.net/dorar_api.json?skey=" + $("#skey").attr("value") + "&callback=?", function(data){

	  $("#dorar").html("");
	  $.each(data.ahadith, function(index, item){
		$("#dorar").append("<span class='qalink' >" + item + "</span>");
	  });
	});
	
	
}
</script>
	
<xen:title>{xen:phrase hadith_confirm}</xen:title>
<xen:description>{xen:phrase hadith_desc}</xen:description>

	<div class="sectionMain">
		<span>أدخل كلمات البحث: </span>
		<input class="textCtrl search-term" type="text" id="skey" placeholder="أدخل جزءاً من الحديث للبحث عنه" />
		<button onclick="check_hadith()" class="button primary search-btn" > بحث </button>
		
		<div id="dorar" class="section">
				
		</div>
	</div>
<div class="importantMessage">{xen:phrase hadith_dorar}</div>
<xen:if is="{xen:property showShare}">
<xen:include template="share_page">
	<xen:set var="$url">{xen:link 'canonical:hadith'}</xen:set>
</xen:include>
</xen:if>
<xen:if is="{xen:property sideActive}">
<xen:sidebar>

</xen:sidebar>
</xen:if>

<xen:comment>
<form action="" method="post" class="xenForm" >
                    <input class="textCtrl" type="text" id="s" name="s" placeholder="أدخل جزءاً من الحديث للبحث عنه" />
                    <input accesskey="s" class="button primary" id="SubmitButton" type="submit" value="بحث" />
                    <input type="hidden" name="_xfToken" value="{$visitor.csrf_token_page}" />
                    <div class="sectionMain" id="dorar">
                    {$haditt}
                    </div>
</form>
</xen:comment>                ]]></template>
